{
    "name":"iperf-real-scenario",
    "vendor":"fokus",
    "version":"0.1-ALPHA",
    "vnfd":[
        {
            "name":"iperfserver",
            "vendor":"fokus",
            "version":"0.1",
            "type":"server",
            "lifecycle_event":[
                {
                    "event":"INSTANTIATE",
                    "lifecycle_events":[
                        "test-install.sh",
                        "install-srv.sh"
                    ]
                }
            ],
            "configurations":{
                "name":"server-configuration",
                "configurationParameters":[{  
                  "confKey":"conf3",
                  "value":"3"
               },
	       {  
                  "confKey":"conf4",
                  "value":"4"
               }
                ]
            },
            "vdu":[
                {
                    "vm_image":[
                        "ubuntu-14.04-server-cloudimg-amd64-disk1"
                    ],
                    "scale_in_out":1,
                    "vnfc":[
                        {
                            "connection_point":[
                                {
                                    "floatingIp":"random",
                                    "virtual_link_reference":"private"
                                }
                            ]
                        }
                    ],
                    "vimInstanceName":["RegionOne"]
                }
            ],
            "virtual_link":[
                {
                    "name":"private"
                }
            ],
            "deployment_flavour":[
                {
                    "flavour_key":"iperf"
                }
            ],
            "type":"server",
            "endpoint":"generic",
            "vnfPackageLocation":"https://github.com/wittling/ob-nfv.git"
        },
        {
            "name":"iperfclient",
            "vendor":"fokus",
            "version":"0.1",
            "type":"client",
            "lifecycle_event":[
                {
                    "event":"INSTANTIATE",
                    "lifecycle_events":[
                        "test-install.sh"
                    ]
                },
                {
                    "event":"CONFIGURE",
                    "lifecycle_events":[
                        "server_configure.sh"
                    ]
                }
            ],
            "configurations":{
                "name":"client-configuration",
                "configurationParameters":[{  
                  "confKey":"conf1",
                  "value":"1"
               },
	       {  
                  "confKey":"conf2",
                  "value":"2"
               }]
            },
            "vdu":[
                {
                    "vm_image":[
                        "ubuntu-14.04-server-cloudimg-amd64-disk1"
                    ],
                    "scale_in_out":2,
                    "vnfc":[
                        {
                            "connection_point":[
                                {
                                    "floatingIp":"random",
                                    "virtual_link_reference":"private"
                                }
                            ]
                        }, {
                            "connection_point":[
                                {
                                    "floatingIp":"random",
                                    "virtual_link_reference":"private"
                                }
                            ]
                        }
                    ],
                    "vimInstanceName":["RegionOne"]
                }
            ],
            "virtual_link":[
                {
                    "name":"private"
                }
            ],
            "deployment_flavour":[
                {
                    "flavour_key":"iperf"
                }
            ],
            "type":"client",
            "endpoint":"generic",
            "vnfPackageLocation":"https://github.com/wittling/ob-nfv.git"
        }
    ],
    "vld":[
        {
            "name":"private"
        }
    ],
    "vnf_dependency":[
        {
            "source":{
                "name":"iperfserver"
            },
            "target":{
                "name":"iperfclient"
            },
            "parameters":[
                "private"
            ]
        }
    ]
}
